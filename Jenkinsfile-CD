@Library('shared_library')_

node(label:'slave') {
  
  stage('Download Artifacts'){
    
    downloadArtifacts "artifactory", "localsnapshot/${env.BUILD_NUMBER}/*.war", "./artifacts/"
    
  }
  
  stage('SCP-ing war file to tomcat server')
  {
  sh "scp /var/lib/jenkins/workspace/CDPipeline/artifacts/${env.BUILD_NUMBER}/*.war root@104.211.209.214:/usr/local/tomcat/webapps"
  
  }  
  
}
